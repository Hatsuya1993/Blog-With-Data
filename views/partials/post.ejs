<section class="post container-fluid py-2" id="post">
    <div class="container-fluid">
        <%=console.log(products)%>
        <% for (var i = 0; i < products.length; i++) { %>
        <div class="container-fluid mb-5">
            <div class="post-img" style="background-image: url(<%=products[i].image%>);">
                <div class="d-flex post-img-content bg-white w-50 justify-content-around py-3">
                    <div class="d-flex">
                        <i class="far fa-user my-auto"></i>
                        <p class="my-auto px-2"><%=products[i].role%></p>
                    </div>
                    <div class="d-flex text-center">
                        <i class="far fa-calendar-alt my-auto pl-4"></i>
                        <p class="my-auto px-2"><%=products[i].dateCreated%></p>
                    </div>
                    <div class="d-flex">
                        <i class="fas fa-tag my-auto"></i>
                        <p class="my-auto px-2"><%=products[i].categories%></p>
                    </div>
                    <div class="d-flex">
                        <i class="far fa-comment my-auto"></i>
                        <p class="my-auto px-2"><%=products[i].blogComments%></p>
                    </div>
                </div>
            </div>
            <div>
                <h1 class="post-title"><%=products[i].title%></h1>
                <p><%=products[i].passage.split(" ").splice(0,50).join(" ")+"..."%></p>
                <button type="button" class="btn btn-outline-dark">
                    <a href="/blog/<%=products[i]._id%>">READ MORE </a>
                    <i class="fas fa-arrow-right"></i>
                </button>
            </div>
        </div>
        <% } %>
        <!-- Start Pagination -->
        <div class="container-fluid w-25 mx-auto">
            <% if (pages > 0) { %>
            <ul class="pagination text-center">
                <% if (current == 1) { %>
                <li class="disabled"><button type="button" class="btn btn-outline-dark"><a>First</a></button>
                </li>
                <% } else { %>
                <li><button type="button" class="btn btn-outline-dark"><a href="/home/1">First</a></button></li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                <li class="disabled"><button type="button" class="btn btn-outline-dark"><a>...</a></button></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                <li class="active"><button type="button" class="btn btn-outline-dark active"><a><%= i %></a></button>
                </li>
                <% } else { %>
                <li><button type="button" class="btn btn-outline-dark"><a href="/home/<%= i %>"><%= i %></a></button>
                </li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                <li class="disabled"><button type="button" class="btn btn-outline-dark"><a>...</a></button></li>
                <% } %>
                <% } %>
                <% if (current == pages) { %>
                <li class="disabled"><button type="button" class="btn btn-outline-dark"><a>Last</a></button></li>
                <% } else { %>
                <li><button type="button" class="btn btn-outline-dark"><a href="/home/<%= pages %>">Last</a></button>
                </li>
                <% } %>
            </ul>
            <% } %>
        </div>
        <!-- End Pagination -->
    </div>
</section>